{
  "manifest_version": 3,
  "name": "Sports Sidebar",
  "version": "1.0.1",
  "description": "A simple Chrome extension that shows sports data in the sidebar",
  "permissions": ["sidePanel"],
  "background": {
    "service_worker": "index.js"
  },
  "action": {
    "default_title": "Open Hello World Sidebar"
  },
  "side_panel": {
    "default_path": "index.html"
  }
}
