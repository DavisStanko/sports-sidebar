{
  "manifest_version": 3,
  "name": "Sports Sidebar",
  "version": "1.1.0",
  "description": "A simple Chrome extension that shows sports data in the sidebar",
  "permissions": ["sidePanel"],
  "background": {
    "service_worker": "index.js"
  },
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
